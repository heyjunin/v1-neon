{
  "name": "v1",
  "private": true,
  "workspaces": ["packages/*", "apps/*", "tooling/*"],
  "scripts": {
    "build": "turbo build",
    "clean": "git clean -xdf node_modules",
    "clean:workspaces": "turbo clean",
    "dev": "turbo dev --parallel",
    "dev:web": "turbo dev --filter=@v1/web",
    "dev:jobs": "turbo jobs --filter=@v1/jobs",
    "dev:app": "turbo dev --filter=@v1/app",
    "start:web": "turbo start --filter=@v1/web",
    "start:app": "turbo start --filter=@v1/app",
    "test": "turbo test --parallel",
    "test:user-sync": "node scripts/test-user-sync.js",
    "db:migrate": "turbo migrate --filter=@v1/database",
    "db:generate": "turbo generate --filter=@v1/database",
    "db:push": "turbo push --filter=@v1/database",
    "db:studio": "turbo studio --filter=@v1/database",
    "seed": "turbo seed --filter=@v1/database",
    "seed:run": "turbo seed:run --filter=@v1/database --",
    "seed:list": "turbo seed:list --filter=@v1/database",
    "seed:help": "turbo seed:help --filter=@v1/database",
    "db:setup": "bun run db:migrate && bun run seed:run",
    "db:reset": "bun run db:push && bun run seed:run --force",
    "format": "biome format --write .",
    "lint": "turbo lint && bun lint:repo",
    "lint:repo": "bunx sherif@latest",
    "lint:repo:fix": "bunx sherif@latest --fix",
    "typecheck": "turbo typecheck",
    "setup:env": "node scripts/setup-env.js",
    "setup:env:complete": "node scripts/setup-env-complete.js",
    "setup:neon": "node scripts/setup-neon.js",
    "setup:webhook": "node scripts/setup-webhook.js",
    "setup:storage": "node scripts/setup-storage.js",
    "supabase:local": "bash scripts/supabase-local.sh",
    "supabase:remote": "bash scripts/supabase-remote.sh",
    "supabase:status": "node scripts/supabase-status.js",
    "dev:local": "npm run supabase:local && bun run dev",
    "dev:remote": "npm run supabase:remote && bun run dev"
  },
  "devDependencies": {
    "@biomejs/biome": "1.8.3",
    "@t3-oss/env-nextjs": "^0.11.1",
    "turbo": "2.1.1",
    "typescript": "^5.5.4"
  },
  "packageManager": "bun@1.1.26"
}
