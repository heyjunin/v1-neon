      template: "daily-report",
      data: reportData,
    });
    
    // Store report
    await api.reports.create.mutate({
      date: yesterday.toISOString().split('T')[0],
      data: reportData,
    });
    
    return { reportGenerated: true, date: yesterday.toISOString().split('T')[0] };
  },
});
